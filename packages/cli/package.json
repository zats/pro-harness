{
  "name": "pro-harness-cli",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "pro-harness": "dist/cli.js"
  },
  "scripts": {
    "build": "pnpm --filter pro-harness-core build && tsc -p tsconfig.json",
    "dev": "pnpm build && node dist/cli.js",
    "start": "node dist/cli.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "pro-harness-core": "workspace:*",
    "pro-harness-shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.12",
    "typescript": "^5.9.3"
  }
}
